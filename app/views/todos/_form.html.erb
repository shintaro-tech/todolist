<div class="row">
  <div class="col-6">
    <%= form_with(model: todo, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class= "form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %> 
      </div>
      
      <div class= 'form-group'>
        <%= f.label :content, '予定' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      <!--一覧にtodo.tag.titleが表示されないのはここが問題なのでは？-->
      <div class="form_input">
        <%= f.label :tag, 'カテゴリ' %><br>
        <%= f.collection_select :tag, current_user.tags.all,:id, :title, prompt: "選択してください", class: 'form-control' %> <%= link_to 'カテゴリを追加する', new_tag_path %>
      </div>
      
      <br>
      
      <%= f.submit '登録', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>